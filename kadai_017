      "source": [
        "class Human:\n",
        "  def __init__(self, name, age):\n",
        "    self.name = name\n",
        "    self.age = age\n",
        "\n",
        "  def check_adult(self):\n",
        "    if self.age >= 20:\n",
        "      print(f\"{self.name}は大人です\")\n",
        "    else:\n",
        "      print(f\"{self.name}は大人ではありません\")\n",
        "\n",
        "members_data = {\"たかし\" : 19 , \"さとし\" : 20 ,\"えり\" : 21}\n",
        "human_list = []\n",
        "\n",
        "for name, age in members_data.items():\n",
        "  human = Human(name, age) # 各メンバーごとに新しいHumanオブジェクトを作成\n",
        "  human_list.append(human)\n",
        "\n",
        "# リスト内の各Humanオブジェクトに対して処理を実行\n",
        "for human in human_list:\n",
        "  human.check_adult()"
      ],
